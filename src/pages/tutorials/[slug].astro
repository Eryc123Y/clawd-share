---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const tutorials = await getCollection('tutorials');
  return tutorials.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .article-container {
    animation: fadeInUp 0.8s ease-out both;
  }

  .article-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 3px solid #1A1A2E;
  }

  .article-meta time {
    font-family: 'Space Mono', monospace;
    font-size: 0.875rem;
    font-weight: 500;
    color: #666;
    background: #FEF9E7;
    padding: 0.5rem 1rem;
    border: 2px solid #1A1A2E;
  }

  .difficulty-badge {
    padding: 0.5rem 1rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: 2px solid;
    background: transparent;
  }

  .difficulty-beginner {
    border-color: #2EC4B6;
    color: #2EC4B6;
  }

  .difficulty-intermediate {
    border-color: #FF6B35;
    color: #FF6B35;
  }

  .difficulty-advanced {
    border-color: #F7C59F;
    color: #F7C59F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: #1A1A2E;
    color: #FEF9E7;
  }

  .content {
    font-size: 1.125rem;
    line-height: 2;
    max-width: 800px;
  }

  .content :global(h2) {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 2rem;
    margin: 3rem 0 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #2EC4B6;
  }

  .content :global(h3) {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    color: #1A1A2E;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
    color: #444;
  }

  .content :global(ul), .content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .content :global(li) {
    margin-bottom: 0.75rem;
    color: #444;
  }

  .content :global(code) {
    font-family: 'Space Mono', monospace;
    font-size: 0.875rem;
    background: #F7C59F;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .content :global(pre) {
    background: #1A1A2E;
    color: #FEF9E7;
    padding: 2rem;
    border-radius: 0;
    overflow-x: auto;
    margin: 2rem 0;
    border: 2px solid #2EC4B6;
  }

  .content :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .content :global(a) {
    color: #2EC4B6;
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 3px;
  }

  .content :global(a:hover) {
    color: #FF6B35;
    background: #FEF9E7;
  }

  .content :global(blockquote) {
    border-left: 4px solid #2EC4B6;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.25rem;
    color: #666;
  }
</style>

<div class="article-container">
  <article class="card">
    <h1 style="font-size: clamp(2.5rem, 5vw, 3.5rem); margin-bottom: 1.5rem;">
      {entry.data.title}
    </h1>
    <div class="article-meta">
      <time>{entry.data.date.toLocaleDateString('zh-CN')}</time>
      <span class={`difficulty-badge difficulty-${entry.data.difficulty}`}>
        {entry.data.difficulty === 'beginner' && '初级'}
        {entry.data.difficulty === 'intermediate' && '中级'}
        {entry.data.difficulty === 'advanced' && '高级'}
      </span>
      <div class="tags">
        {entry.data.tags.map((tag) => <span class="tag">#{tag}</span>)}
      </div>
    </div>
    <div class="content">
      <Content />
    </div>
  </article>
</div>
